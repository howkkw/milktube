extends base
block contents
    if errorMsg 
        h4=errorMsg
    form(method="POST").Form
        div.Form-column
            span Current Password
            input(type="password", name="oldPassword", id="oldPassword", required, placeholder="Current Password", minlength="6")
        div.Form-column    
            span New Password
            input(type="password", required, name="password", id="password", placeholder="New Password", minlength="6")
        div.Form-column    
            span Password Confirm
            input(type="password", required, name="password1", id="password1", placeholder="New Password Confirmation", minlength="6")
        input(type="submit", value="Edit Password").Form-btn